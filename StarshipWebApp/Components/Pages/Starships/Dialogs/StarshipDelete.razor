@using Radzen
@using Radzen.Blazor
@inject Radzen.DialogService RadzenDialogService

<RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center">
    <img src="images/deathstar.png" alt="Death Star Explosion Comic" style="width:400px; border-radius: 20px" />
    <RadzenText TextStyle="TextStyle.Body1">
        Are you sure you want to delete the starship <strong>@Starship?.Name</strong>?
    </RadzenText>
    <RadzenStack Orientation="Orientation.Horizontal">
        <RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Delete Starship" Click="@(() => RadzenDialogService.Close(true))" />
        <RadzenButton ButtonStyle="ButtonStyle.Secondary" Text="Cancel" Click="@(() => RadzenDialogService.Close(false))" />
    </RadzenStack>
</RadzenStack>



@code {

    [Parameter]
    public Starship? Starship { get; set; }
}
